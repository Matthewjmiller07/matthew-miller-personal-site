---
import Layout from './Layout.astro';
import ImageSlider from '../components/ImageSlider.astro';

interface Props {
  title: string;
  description: string;
  folder: string;
  maxImages?: number;
}

const { title, description, folder, maxImages = 0 } = Astro.props;
---

<Layout title={title} description={description}>
  <main class="container mx-auto px-4 sm:px-6 lg:px-8 py-12 sm:py-16">
    <article class="prose prose-lg lg:prose-xl dark:prose-invert mx-auto">
      <header class="mb-10 not-prose">
        <h1 class="text-4xl font-extrabold tracking-tight text-text-light dark:text-text-dark sm:text-5xl text-center">
          {title}
        </h1>
      </header>

      <div class="not-prose my-8">
        <p class="text-center text-slate-700 dark:text-slate-300 mb-10 max-w-3xl mx-auto text-lg">
          {description}
        </p>
        
        <div class="max-w-5xl mx-auto px-4">
          <ImageSlider 
            client:visible 
            folder={folder}
            maxImages={maxImages}
            autoplay={true}
            delay={5000}
            effect="fade"
          />
        </div>
        
        <p class="text-center text-sm text-slate-500 dark:text-slate-400 mt-6">
          Swipe or use the navigation arrows to view more images
        </p>
      </div>
    </article>
  </main>
</Layout>
