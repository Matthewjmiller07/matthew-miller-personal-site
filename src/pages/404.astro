---
import Layout from '../layouts/Layout.astro';
---

<head>
  <title>404 &ndash; Page Not Found | Matthew Miller</title>
  <meta name="description" content="Oops! The page you're looking for doesn't exist. You might have taken a wrong turn on the internet highway." />
  <meta name="robots" content="noindex" />
</head>

<style>
  body {
    background: radial-gradient(circle at center, #111 0%, #000 100%);
    background-size: cover;
    color: white;
    font-family: system-ui, sans-serif;
  }

  .grid-overlay {
    position: fixed;
    inset: 0;
    background-image: linear-gradient(rgba(255,255,255,0.05) 1px, transparent 1px),
                      linear-gradient(90deg, rgba(255,255,255,0.05) 1px, transparent 1px);
    background-size: 40px 40px;
    pointer-events: none;
    z-index: 0;
  }

  .container {
    position: relative;
    z-index: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 80vh;
    padding: 2rem;
    text-align: center;
  }

  .speech-bubble {
    position: relative;
    background: #222;
    border: 2px solid #70d8ff;
    border-radius: 1rem;
    padding: 1rem 1.25rem;
    max-width: 400px;
    margin-bottom: 2.5rem; /* extra space to make room for tail */
    font-size: 1rem;
    text-align: center;
    z-index: 2;
  }

  .speech-bubble::after {
  content: "";
  position: absolute;
  top: 100%;
  left: 50%;
  transform: translateX(-50%);
  width: 0;
  height: 0;
  border-left: 18px solid transparent;
  border-right: 18px solid transparent;
  border-top: 18px solid #222;
  /* Add a border around the triangle */
  filter: drop-shadow(0 0 2px #70d8ff);
}

  .speech-bubble h1 {
    font-size: 1.5rem;
    margin: 0 0 0.5rem;
    color: #70d8ff;
  }

  .speech-bubble p {
    margin: 0;
    font-size: 1rem;
  }

  .speech-bubble a {
    color: #70d8ff;
    text-decoration: underline;
  }

  .media-element {
    width: 300px;
    max-width: 80%;
    height: auto;
    display: block;
    margin: 0 auto;
  }

  @media (min-width: 768px) {
    .speech-bubble {
      font-size: 1.125rem;
      padding: 1.25rem 1.75rem;
    }

    .speech-bubble h1 {
      font-size: 2rem;
    }

    .media-element {
      width: 400px;
    }
  }
</style>

<Layout title="404 &ndash; Page Not Found">
  <div class="grid-overlay"></div>
  <main class="container">
    <div class="speech-bubble">
      <h1>404 &ndash; Page Not Found</h1>
      <p>
        It looks like you&rsquo;ve wandered into uncharted territory.
        Let&rsquo;s head back to <a href="/">home base</a>.
      </p>
    </div>

    <div id="media-container">
      <video autoplay loop muted playsinline poster="/images/404.png" class="media-element">
        <source src="/images/404me.webm" type="video/webm" />
        <img src="/images/404.png" alt="Fallback animation frame" class="fallback" />
      </video>
    </div>

    <script>
      // Wait for the DOM to be fully loaded
      document.addEventListener('DOMContentLoaded', function() {
        const isSafariIOS = /iPad|iPhone|iPod/.test(navigator.userAgent) && 
                           !window.MSStream && 
                           /WebKit/.test(navigator.userAgent) && 
                           !/(Chrome|CriOS)/.test(navigator.userAgent);

        const container = document.getElementById('media-container');
        
        if (isSafariIOS) {
          container.innerHTML = `<img src="/images/404 Background Removed.png" alt="404 Error" class="media-element">`;
        }
      });
    </script>
  </main>
</Layout>