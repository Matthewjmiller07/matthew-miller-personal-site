---
import Layout from '../../layouts/Layout.astro';
import { Image } from 'astro:assets';

// Get preview images for each gallery
const previews = [
  {
    title: 'AI Art Gallery',
    description: 'Explore a collection of AI-generated art pieces created using various AI art generation techniques.',
    href: '/art/ai-art',
    image: '/AI Art/apple.png', // Make sure to add a preview.jpg to your AI Art folder
    alt: 'AI Art Preview'
  },
  {
    title: 'AI-Generated Portraits',
    description: 'A collection of AI-generated portraits created using advanced AI art generation techniques.',
    href: '/art/ai-matthew',
    image: '/images/AI-Matthew/00025-1139831066.png', // Make sure to add a preview.jpg to your AI-Matthew folder
    alt: 'AI Portraits Preview'
  }
];
---


<Layout 
  title="Art & Creative Works"
  description="Explore a collection of AI-generated art and creative works by Matthew Miller."
>
  <main class="container mx-auto px-4 py-12">
    <article class="prose prose-lg lg:prose-xl dark:prose-invert mx-auto">
      <header class="text-center mb-16">
        <h1 class="text-4xl md:text-5xl font-bold bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent">
          Art & Creative Works
        </h1>
        <p class="mt-6 text-xl text-slate-600 dark:text-slate-300 max-w-3xl mx-auto">
          Exploring the intersection of technology and creativity through AI-generated art and digital expression.
        </p>
      </header>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mt-12">
        {previews.map((preview) => (
          <a 
            href={preview.href}
            class="group relative block overflow-hidden rounded-2xl shadow-xl hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-1"
          >
            <div class="aspect-w-16 aspect-h-9 relative">
              <img 
                src={preview.image} 
                alt={preview.alt}
                class="w-full h-64 object-cover transition-transform duration-500 group-hover:scale-105"
                loading="lazy"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-end p-6">
                <div class="text-white">
                  <h3 class="text-2xl font-bold mb-2">{preview.title}</h3>
                  <p class="text-slate-200">{preview.description}</p>
                  <span class="inline-block mt-3 text-blue-300 group-hover:underline">
                    View Gallery â†’
                  </span>
                </div>
              </div>
            </div>
          </a>
        ))}
      </div>

      <div class="mt-16 text-center">
        <h2 class="text-2xl font-semibold mb-4">About This Collection</h2>
        <p class="text-slate-600 dark:text-slate-300 max-w-3xl mx-auto">
          These collections showcase experiments with AI-powered art generation, exploring the creative potential of machine learning algorithms in visual art.
          Each piece represents a unique collaboration between human creativity and artificial intelligence.
        </p>
      </div>
    </article>
  </main>

  <style>
    /* Smooth scrolling for the page */
    html {
      scroll-behavior: smooth;
    }
    
    /* Animation for the grid items */
    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
    
    .grid > * {
      animation: fadeInUp 0.6s ease-out forwards;
      opacity: 0;
    }
    
    .grid > *:nth-child(1) { animation-delay: 0.1s; }
    .grid > *:nth-child(2) { animation-delay: 0.3s; }
  </style>
</Layout>
