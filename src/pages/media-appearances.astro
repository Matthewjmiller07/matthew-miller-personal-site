---
import Layout from '../layouts/Layout.astro';
import LinkIcon from '../components/icons/LinkIcon.astro'; // Create this simple icon component

const mediaMentions = [
    {
        name: "Diginomica",
        url: "https://diginomica.com/technology-stick-it-needs-be-useful-why-g2s-matthew-miller-predicts-generative-ai-downturn-2024",
        snippet: "Matthew Miller shares why generative AI must be useful, not just trendy, and predicts a downturn for solutions that don't deliver real value. Companies are being told they need generative AI before understanding its best use, but the real race is to improve processes that increase efficiency and solve real problems."
    },
    {
        name: "Datanami",
        url: "https://www.bigdatawire.com/2023/10/30/when-genai-hype-exceeds-genai-reality/",
        snippet: "Matthew Miller discusses the gap between GenAI hype and business reality. Despite a surge in products with GenAI features, few organizations are meeting their business goals, leading experts to predict a modest pullback in 2024."
    },
];

const appearances = [
    {
        title: "Webinar With Descript",
        description: "In this live event, Matthew Miller and Priya Patel from G2, as well as Harmony Jiroudek, Customer Success Manager at Descript, shared how businesses are increasingly turning to video to power their growth.",
        url: "https://www.youtube.com/watch?v=tKqUoPWOHwc",
        embedUrl: "https://www.youtube.com/embed/tKqUoPWOHwc",
        thumbnail: "https://i.ytimg.com/vi/tKqUoPWOHwc/hqdefault.jpg"
    },
    {
        title: "Podcast Panel for This Week In Voice",
        description: "We discussed the cost of LLM-associated tech, conversational AI in education, and more.",
        url: "https://www.youtube.com/watch?v=MYREI04uXXY",
        embedUrl: "https://www.youtube.com/embed/MYREI04uXXY",
        thumbnail: "https://i.ytimg.com/vi/MYREI04uXXY/hqdefault.jpg"
    },
    {
        title: "Webinar With Synthesia",
        description: "Learn more about how companies are using AI to create great content and how your business can benefit too. With the increasing use of AI technology in everyday content creation, it's no surprise that G2.com has introduced a new category called 'Synthetic Media.'",
        url: "https://www.youtube.com/watch?v=4uzzD9sD-PI",
        embedUrl: "https://www.youtube.com/embed/4uzzD9sD-PI",
        thumbnail: "https://i.ytimg.com/vi/4uzzD9sD-PI/hqdefault.jpg"
    },
];

const linkedinLives = [
    { title: "Linkedin Live: What is Process Orchestration and How Can It Impact Your Business?", url: "https://www.linkedin.com/posts/g2dotcom_next-week-join-our-research-principal-activity-7161727746753179648-wKnm", description: "" },
    { title: "G2 2024 Technology Trends Showcase", url: "https://www.linkedin.com/events/g22024technologytrendsshowcase7148752583979892737/about/", description: "" },
    { title: "Introducing AI Content Detector and What This Means for MarTech and Beyond", url: "https://www.linkedin.com/events/introducingaicontentdetectorand7140761336052895745/comments/", description: "" },
    { title: "Generative AI in Education", url: "https://www.linkedin.com/events/theriseofgenerativeaiineducatio7130236491091320833/comments/", description: "" },
    { title: "G2’s State of Software Report", url: "https://www.linkedin.com/events/thestateofsoftware-accordingtog7117973341080055808/comments/", description: "" },
    { title: "HR’s New Best Friend: How NLP is Revolutionizing The Field", url: "https://www.linkedin.com/events/7024845379443556352/", description: "" },
    { title: "Talking to Technology: The Latest NLP Trends From G2", url: "https://www.linkedin.com/events/6953368145013170176/", description: "" },
    { title: "Deepfakes: What B2B Leaders Need to Know", url: "https://www.linkedin.com/events/6922925415145603073/", description: "" },
    { title: "The State of Supply Chain: Market Trends & Ukraine’s Impact", url: "https://www.linkedin.com/events/6909494881824464896/comments/", description: "" },
];
---

<Layout
    title="Media & Appearances"
    description="Explore Matthew Miller's media mentions, webinar appearances, podcast participations, and other public engagements."
>

      </nav>
    

      <main class="flex-1">
        <div class="max-w-3xl mx-auto">
            <header class="mb-12 text-center">
                <h1 class="text-4xl font-extrabold tracking-tight text-primary-light dark:text-primary-dark sm:text-5xl">
                    Media & Appearances
                </h1>
                <p class="mt-4 text-lg text-secondary-light dark:text-secondary-dark">
                    Catch up on Matthew's contributions and discussions across various platforms.
                </p>
            </header>

            <section id="media-mentions" class="mb-16">
                <h2 class="text-3xl font-bold tracking-tight text-primary-light dark:text-primary-dark mb-8 border-b-2 border-accent dark:border-accent-dark pb-3">
                    Media Mentions
                </h2>
                {mediaMentions.filter(m => m.name).length > 0 ? (
                    <ul class="space-y-6">
                        {mediaMentions.filter(m => m.name).map(mention => (
                            <li class="text-lg">
                                {mention.url ? (
                                    <a href={mention.url} target="_blank" rel="noopener noreferrer" class="inline-flex items-center group text-primary-light dark:text-primary-dark hover:text-accent dark:hover:text-accent-dark">
                                        {mention.name}
                                        <LinkIcon class="w-4 h-4 ml-1.5 opacity-70 group-hover:opacity-100 transition-opacity" />
                                    </a>
                                ) : (
                                    mention.name
                                )}
                                {mention.snippet && (
                                    <p class="mt-2 text-secondary-light dark:text-secondary-dark text-base leading-relaxed border-l-4 border-accent dark:border-accent-dark pl-4 italic">
                                        {mention.snippet}
                                    </p>
                                )}
                            </li>
                        ))}
                    </ul>
                ) : (
                    <p class="text-secondary-light dark:text-secondary-dark">No media mentions listed yet.</p>
                )}
            </section>


            <section id="appearances">
                <h2 class="text-3xl font-bold tracking-tight text-primary-light dark:text-primary-dark mb-8 border-b-2 border-accent dark:border-accent-dark pb-3">
                    Appearances
                </h2>
                {appearances.filter(a => a.title).length > 0 ? (
  <div class="space-y-10">
    {appearances.filter(a => a.title).map(appearance => (
      <article class="p-6 bg-card-bg-light dark:bg-card-bg-dark rounded-xl shadow-lg border border-border-light dark:border-border-dark hover:shadow-xl transition-shadow duration-200">
        {/* Show embed if available, else thumbnail if available */}
        {appearance.embedUrl ? (
          <div class="mb-3">
            <iframe
              src={appearance.embedUrl}
              width="100%"
              height="315"
              frameborder="0"
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
              allowfullscreen
              class="rounded-lg shadow"
            ></iframe>
          </div>
        ) : (
          appearance.thumbnail && appearance.thumbnail !== "" && (
            appearance.url ? (
              <a href={appearance.url} target="_blank" rel="noopener noreferrer" class="block mb-3 group">
                <img src={appearance.thumbnail} alt={appearance.title + ' thumbnail'} class="rounded-lg w-full max-w-md mx-auto transition-transform duration-200 group-hover:scale-105 shadow" loading="lazy" />
              </a>
            ) : (
              <img src={appearance.thumbnail} alt={appearance.title + ' thumbnail'} class="rounded-lg w-full max-w-md mx-auto mb-3 shadow" loading="lazy" />
            )
          )
        )}
        <h3 class="text-xl font-semibold mb-2 text-primary-light dark:text-primary-dark">
          {appearance.url ? (
            <a href={appearance.url} target="_blank" rel="noopener noreferrer" class="inline-flex items-center group hover:text-accent dark:hover:text-accent-dark">
              {appearance.title}
              <LinkIcon class="w-4 h-4 ml-1.5 opacity-70 group-hover:opacity-100 transition-opacity" />
            </a>
          ) : (
            appearance.title
          )}
        </h3>
        {appearance.description && (
          <p class="text-secondary-light dark:text-secondary-dark text-sm leading-relaxed">
            {appearance.description}
          </p>
        )}
      </article>
    ))}
  </div>
) : (
  <p class="text-secondary-light dark:text-secondary-dark">No appearances listed yet.</p>
)}
            </section>


             <section id="linkedin-live-events" class="mt-16">
                <h2 class="text-3xl font-bold tracking-tight text-primary-light dark:text-primary-dark mb-8 border-b-2 border-accent dark:border-accent-dark pb-3">
                    LinkedIn Live Events
                </h2>
                <p class="mb-6 text-secondary-light dark:text-secondary-dark text-base text-center">Catch up on Matthew's LinkedIn Live sessions, covering industry trends, AI, NLP, and more.</p>
                {linkedinLives.length > 0 ? (
                  <div class="space-y-10">
                    {linkedinLives.map(live => (
                      <article class="p-6 bg-card-bg-light dark:bg-card-bg-dark rounded-xl shadow-lg border border-border-light dark:border-border-dark hover:shadow-xl transition-shadow duration-200">
                        <h3 class="text-xl font-semibold mb-2 text-primary-light dark:text-primary-dark">
                          <a href={live.url} target="_blank" rel="noopener noreferrer" class="inline-flex items-center group hover:text-accent dark:hover:text-accent-dark">
                            {live.title}
                            <LinkIcon class="w-4 h-4 ml-1.5 opacity-70 group-hover:opacity-100 transition-opacity" />
                          </a>
                        </h3>
                        {live.description && live.description !== "" && (
                          <p class="text-secondary-light dark:text-secondary-dark text-sm leading-relaxed">
                            {live.description}
                          </p>
                        )}
                      </article>
                    ))}
                  </div>
                ) : (
                  <p class="text-secondary-light dark:text-secondary-dark">No LinkedIn Live events listed yet.</p>
                )}
            </section>
        </div>
    </main>
</Layout>