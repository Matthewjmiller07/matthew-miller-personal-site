---
import Layout from '../layouts/Layout.astro';
---
<head>
  <meta charset="UTF-8" />
  <title>Tech Career Timeline | Matthew Miller</title>
  <meta name="description" content="Explore the professional journey of Matthew Miller, highlighting roles in AI, analytics, and research leadership." />
</head>

<style>
  body {
    font-family: system-ui, sans-serif;
    background: linear-gradient(to right, #0f2027, #203a43, #2c5364);
    color: white;
    padding: 2rem;
  }

  .timeline {
    position: relative;
    margin: 0 auto;
    max-width: 900px;
    padding: 2rem 0;
  }

  .timeline::before {
    content: '';
    position: absolute;
    left: 50%;
    top: 0;
    bottom: 0;
    width: 4px;
    background: #70d8ff;
    transform: translateX(-50%);
  }

  .entry {
    position: relative;
    width: 50%;
    padding: 1rem 2rem;
    box-sizing: border-box;
    opacity: 0;
    transform: translateY(20px);
    transition: all 0.6s ease-in-out;
  }

  .entry.visible {
    opacity: 1;
    transform: translateY(0);
  }

  .entry.left {
    left: 0;
    text-align: right;
  }

  .entry.right {
    left: 50%;
    text-align: left;
  }

  .entry::before {
    content: '';
    position: absolute;
    top: 1.25rem;
    width: 20px;
    height: 20px;
    border-radius: 50%;
    background: #70d8ff;
    border: 2px solid white;
    z-index: 1;
  }

  .entry.left::before {
    right: -10px;
  }

  .entry.right::before {
    left: -10px;
  }

  .entry h3 {
    margin: 0;
    font-size: 1.2rem;
    color: #70d8ff;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .entry h4 {
    margin: 0.25rem 0 0.5rem;
    font-size: 1rem;
    font-weight: normal;
    opacity: 0.8;
  }

  .entry p {
    font-size: 0.95rem;
    line-height: 1.5;
    margin: 0;
  }

  .entry ul {
    margin: 0.5rem 0 0;
    padding-left: 1rem;
  }

  .entry ul li {
    font-size: 0.9rem;
    line-height: 1.4;
    margin-bottom: 0.25rem;
  }

  @media (max-width: 768px) {
    .entry, .entry.left, .entry.right {
      width: 100%;
      left: 0 !important;
      text-align: left;
      padding-left: 3rem;
    }

    .timeline::before {
      left: 20px;
    }

    .entry::before {
      left: 10px !important;
      right: auto;
    }
  }
</style>

<script>
  // Function to initialize timeline animations
  function initTimeline() {
    const entries = document.querySelectorAll('.entry');
    const observer = new IntersectionObserver((entriesList) => {
      entriesList.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('visible');
        }
      });
    }, { threshold: 0.1 });

    entries.forEach(entry => observer.observe(entry));
  }

  // Run on initial load
  initTimeline();

  // Run when navigating with View Transitions
  document.addEventListener('astro:page-load', () => {
    initTimeline();
  });

  // Run when content updates
  document.addEventListener('astro:after-swap', () => {
    initTimeline();
  });
</script>

